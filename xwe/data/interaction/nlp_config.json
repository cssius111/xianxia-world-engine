{
  "meta": {
    "version": "1.0.0",
    "description": "自然语言处理配置"
  },
  "nlp_config": {
    "enable_llm": true,
    "llm_provider": "mock",
    "llm_providers": {
      "deepseek": {
        "api_base": "https://api.deepseek.com/v1",
        "model": "deepseek-chat",
        "temperature": 0.7,
        "max_tokens": 500
      },
      "openai": {
        "api_base": "https://api.openai.com/v1",
        "model": "gpt-3.5-turbo",
        "temperature": 0.7,
        "max_tokens": 500
      },
      "mock": {
        "description": "用于测试的模拟提供者"
      }
    },
    "fallback_to_rules": true,
    "confidence_threshold": 0.7,
    "cache_enabled": true,
    "cache_size": 100
  },
