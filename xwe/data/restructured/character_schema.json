{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://xianxia-engine.com/schemas/character.json",
  "title": "Character Schema",
  "description": "Schema for basic character data",
  "type": "object",
  "required": ["name", "age", "attributes", "fortune", "destiny", "source"],
  "properties": {
    "name": {
      "oneOf": [
        {"type": "string"},
        {"type": "null"}
      ]
    },
    "age": {
      "oneOf": [
        {"type": "integer"},
        {"type": "null"}
      ]
    },
    "attributes": {
      "oneOf": [
        {"type": "object"},
        {"type": "null"}
      ]
    },
    "fortune": {
      "oneOf": [
        {"type": "string"},
        {"type": "null"}
      ]
    },
    "destiny": {
      "oneOf": [
        {"type": "string"},
        {"type": "null"}
      ]
    },
    "source": {
      "oneOf": [
        {"type": "string"},
        {"type": "null"}
      ]
    }
  }
}
