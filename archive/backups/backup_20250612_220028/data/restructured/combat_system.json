        "resistance_penalty": 0.8
      },
      "fire": {
        "color": "#FF4500",
        "strong_against": ["metal"],
        "weak_against": ["water"],
        "damage_bonus": 1.2,
        "resistance_penalty": 0.8
      },
      "earth": {
        "color": "#8B4513",
        "strong_against": ["water"],
        "weak_against": ["wood"],
        "damage_bonus": 1.2,
        "resistance_penalty": 0.8
      }
    },
    "advanced_elements": {
      "thunder": {
