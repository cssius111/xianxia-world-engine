{
    "name": "cultivation_helper",
    "version": "1.0.0",
    "author": "修仙世界引擎团队",
    "description": "提供自动修炼、修炼统计、最佳地点推荐等辅助功能",
    "dependencies": [],
    "main_class": "CultivationHelperPlugin",
    "config": {
        "auto_cultivate_interval": 300,
        "reminder_interval": 1800,
        "best_location_bonus": 1.5,
        "cultivation_efficiency_threshold": 0.7
